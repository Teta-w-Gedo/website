<script>
	// Assemble contact/social links at runtime to avoid exposing them as contiguous strings in static HTML
	(function () {
		try {
			// Instagram
			const igParts = ['https://', 'instagram', '.com/', 'tetawgedo.kitchen'];
			const ig = igParts.join('');
			const igEl = document.getElementById('footer-instagram');
			if (igEl) igEl.href = ig;

			// WhatsApp group invite
			const waParts = ['https://', 'chat.', 'whatsapp', '.com/', 'G9E2wwFMF2W8z5gFy8WnRW'];
			const wa = waParts.join('');
			const waEl = document.getElementById('footer-whatsapp');
			if (waEl) waEl.href = wa;

			// Email (obfuscated parts)
			const eParts = ['rad', 'wa'];
			const dParts = ['teta', 'w', 'gedo', '.com'];
			const addr = eParts.join('') + '@' + dParts.join('');
			const mail = 'mailto:' + addr;
			const emEl = document.getElementById('footer-email');
			if (emEl) {
				emEl.href = mail;
				emEl.setAttribute('aria-label', 'Contact via email');
			}
		} catch (e) {
			// noop
		}
	})();
</script>

<style>
	footer {
		padding: 2em 1em 6em 1em;
		background: linear-gradient(var(--gray-gradient)) no-repeat;
		color: rgb(var(--gray));
		text-align: center;
	}
	.social-links {
		display: flex;
		justify-content: center;
		gap: 1em;
		margin-top: 1em;
	}
	.social-links a {
		text-decoration: none;
		color: rgb(var(--gray));
	}
	.social-links a:hover {
		color: rgb(var(--gray-dark));
	}
	.footer-email {
		cursor: pointer;
	}
</style>
