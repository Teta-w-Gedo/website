---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
	<nav>
		<h2 class="site-brand">
			<a class="brand-link" href="/">
				<img class="site-logo" src="/teta-w-gedo-logo.png" alt={SITE_TITLE} />
				<span class="site-title">{SITE_TITLE}</span>
			</a>
		</h2>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<!-- Quick actions while site is under construction -->
			<a href="https://chat.whatsapp.com/G9E2wwFMF2W8z5gFy8WnRW" class="header-external" target="_blank" rel="noopener noreferrer">Orders</a>
			<a href="https://instagram.com/tetawgedo.kitchen" class="header-external" target="_blank" rel="noopener noreferrer">Instagram</a>
		</div>
		<div class="social-links">
			<a href="https://instagram.com/tetawgedo.kitchen" target="_blank" rel="noopener noreferrer">
				<span class="sr-only">Follow Teta w Gedo on Instagram</span>
				<!-- Instagram icon -->
				<svg viewBox="0 0 24 24" aria-hidden="true" width="32" height="32"><path fill="currentColor" d="M7 2C4.238 2 2 4.238 2 7v10c0 2.762 2.238 5 5 5h10c2.762 0 5-2.238 5-5V7c0-2.762-2.238-5-5-5H7zm5 6.5A4.5 4.5 0 1 1 7.5 13 4.505 4.505 0 0 1 12 8.5zm4.5-3.75a1.125 1.125 0 1 1-1.125 1.125A1.126 1.126 0 0 1 16.5 4.75zM12 10.5A1.5 1.5 0 1 0 13.5 12 1.502 1.502 0 0 0 12 10.5z"/></svg>
			</a>
			<a href="https://chat.whatsapp.com/G9E2wwFMF2W8z5gFy8WnRW" target="_blank" rel="noopener noreferrer">
				<span class="sr-only">Join our WhatsApp orders group</span>
				<!-- WhatsApp icon -->
				<svg viewBox="0 0 24 24" aria-hidden="true" width="32" height="32"><path fill="currentColor" d="M20.52 3.48A11.9 11.9 0 0 0 12 .75C6.2.75 1.53 5.42 1.53 11.22c0 1.97.52 3.92 1.5 5.6L.75 23.25l6.7-1.77a11.44 11.44 0 0 0 4.78 1.05c5.8 0 10.47-4.67 10.47-10.47 0-2.8-1.1-5.43-3.13-7.28zM12 20.25c-1.33 0-2.63-.34-3.77-.98l-.27-.15-3.98 1.05 1.06-3.88-.17-.29A8.25 8.25 0 1 1 20.25 11.99 8.2 8.2 0 0 1 12 20.25zM16.5 14.25c-.22-.11-1.3-.64-1.5-.72-.2-.08-.34-.11-.49.11-.15.22-.57.72-.7.87-.13.15-.26.17-.48.06-.22-.11-.93-.34-1.77-1.09-.65-.58-1.08-1.29-1.21-1.51-.13-.22-.01-.34.1-.45.1-.1.22-.26.33-.39.11-.13.15-.22.22-.37.07-.15.03-.28-.01-.39-.04-.11-.49-1.18-.67-1.61-.18-.43-.36-.37-.49-.38-.13-.01-.28-.01-.43-.01-.15 0-.39.06-.59.28-.2.22-.77.75-.77 1.83s.79 2.12.9 2.27c.11.15 1.55 2.37 3.77 3.33 2.22.96 2.22.64 2.62.6.4-.04 1.3-.52 1.49-1.02.19-.5.19-.93.13-1.02-.06-.09-.22-.14-.44-.25z"/></svg>
			</a>
			<a id="header-email-link" class="header-external" target="_blank" rel="noopener noreferrer">
				<span class="sr-only">Email Teta w Gedo</span>
				<!-- Simple mail icon -->
				<svg viewBox="0 0 24 24" aria-hidden="true" width="32" height="32"><path fill="currentColor" d="M20 4H4c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/></svg>
			</a>
			<script>
			// Assemble email in parts at runtime to avoid a single contiguous address in source
			(function () {
				try {
					const user = ['rad', 'wa'].join('');
					const host = ['teta', 'w', 'gedo', '.com'].join('');
					const mail = 'mailto:' + user + '@' + host;
					const link = document.getElementById('header-email-link');
					if (link) {
						link.href = mail;
						link.setAttribute('aria-label', `Email Teta w Gedo (${user}@${host})`);
					}
				} catch (e) {
					// noop
				}
			})();
			</script>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	/* site brand/logo */
	.site-brand {
		margin: 0;
	}
	.brand-link {
		display: flex;
		align-items: center;
		text-decoration: none;
		color: inherit;
	}
	.site-logo {
		height: 48px;
		width: auto;
		margin-right: 0.5rem;
		display: inline-block;
	}
	.site-title {
		font-size: 1rem;
		font-weight: 700;
	}
	.brand-link:focus-visible {
		outline: 2px solid var(--accent);
		outline-offset: 2px;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>
